<!-- Navbar -->
{{> navbar}}

<div class="container mx-auto px-4 py-6 mt-20">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Editar Membresía</h1>
            <p class="text-gray-600 mt-2">Modifica los datos de la membresía #{{membership.id_activa}}</p>
        </div>

        <div class="flex flex-wrap gap-3 mt-4 md:mt-0">
            <a href="/memberships"
                class="bg-gray-600 hover:bg-gray-700 text-white px-5 py-2.5 rounded-lg font-medium flex items-center transition-colors">
                <i class="fas fa-arrow-left mr-2"></i> Volver
            </a>
        </div>
    </div>

    <!-- Formulario de edición -->
    <form id="editMembershipForm" action="/memberships/updateMembership/{{membership.id_activa}}" method="POST"
        class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-green-100">
        <input type="hidden" id="id_activa" name="id_activa" value="{{membership.id_activa}}">

        <!-- Información del cliente -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-user-circle mr-2 text-green-500"></i> Información del Cliente
            </h2>
            <div>
                {{!-- Se obtiene el id de la membresía --}}
                <input type="hidden" name="id_activa" value="{{membership.id_activa}}">
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="nombre_completo">
                        Nombre Completo *
                    </label>
                    <input type="text" id="nombre_completo" name="nombre_completo"
                        value="{{membership.nombre_completo}}"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                        required>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="telefono">
                        Teléfono
                    </label>
                    <input type="tel" id="telefono" name="telefono" value="{{membership.telefono}}"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="correo">
                        Correo Electrónico
                    </label>
                    <input type="email" id="correo" name="correo" value="{{membership.correo}}"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent">
                </div>
            </div>
        </div>

        <!-- Información de la membresía -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-id-card-alt mr-2 text-green-500"></i> Información de la Membresía
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="estado">
                        Estado *
                    </label>
                    <select id="estado" name="estado"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                        required>
                        <option value="Activa" {{#if (eq membership.estado "Activa" )}}selected{{/if}}>Activa
                        </option>
                        <option value="Inactiva" {{#if (eq membership.estado "Inactiva" )}}selected{{/if}}>Inactiva
                        </option>
                        <option value="Vencida" {{#if (eq membership.estado "Vencida" )}}selected{{/if}}>Vencida
                        </option>
                    </select>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="fecha_inicio">
                        Fecha de Inicio *
                    </label>
                    <input type="date" id="fecha_inicio" name="fecha_inicio"
                        value="{{formatDate membership.fecha_inicio}}"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                        required>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="fecha_fin">
                        Fecha de Vencimiento *
                    </label>
                    <input type="date" id="fecha_fin" name="fecha_fin" value="{{formatDate membership.fecha_fin}}"
                        class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                        required>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="precio_final">
                        Precio Final *
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <input type="number" id="precio_final" name="precio_final" value="{{membership.precio_final}}"
                            step="0.01" min="0"
                            class="pl-7 w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                            required>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de integrantes (solo para membresías familiares) -->
        {{#if (eq membership.tipo "Familiar")}}
        <div class="mb-8">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-gray-800 flex items-center">
                    <i class="fas fa-users mr-2 text-green-500"></i> Members
                </h2>
                <button type="button" id="addMemberButton"
                    class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    <i class="fas fa-plus mr-1"></i> Add Member
                </button>
            </div>

            <div id="membersContainer" class="space-y-4">
                {{#each membership.integrantes}}
                <div class="member-item bg-gray-50 p-4 rounded-lg border border-gray-200">
                    <input type="hidden" name="members[{{@index}}][id_integrante]" value="{{this.id_integrante}}">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label class="block text-gray-700 text-sm font-medium mb-1">Nombre Completo</label>
                            <input type="text" name="members[{{@index}}][nombre_completo]"
                                value="{{this.nombre_completo}}"
                                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
                                required>
                        </div>
                        <div class="flex items-end">
                            <button type="button"
                                class="remove-member-button inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                <i class="fas fa-trash mr-1"></i> Eliminar
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <!-- Botones de acción -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <a href="/memberships"
                class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                <i class="fas fa-times mr-2"></i> Cancelar
            </a>
            <button type="submit"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                <i class="fas fa-save mr-2"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

<!-- Incluir el script externo -->
<script src="/js/moduleMembershipJs/editMembership.js"></script>

<!-- Template para un nuevo integrante -->
<template id="member-template">
    <div class="member-item bg-gray-50 p-4 rounded-lg border border-gray-200">
        <input type="hidden" name="members[__INDEX__][id_integrante]" value="">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-gray-700 text-sm font-medium mb-1">Nombre Completo</label>
                <input type="text" name="members[__INDEX__][nombre_completo]"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
                    required>
            </div>
            <div class="flex items-end">
                <button type="button"
                    class="remove-member-button inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    <i class="fas fa-trash mr-1"></i> Eliminar
                </button>
            </div>
        </div>
    </div>
</template>