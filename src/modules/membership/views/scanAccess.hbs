{{>navbar}}

<div class="container mx-auto px-4 py-6 mt-20">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Control de Acceso</h1>
            <p class="text-gray-600 mt-2">Escanea el código QR de la membresía para validar y registrar el acceso.</p>
        </div>
        <a href="/memberships"
            class="bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white px-5 py-2.5 rounded-xl font-medium flex items-center transition-all duration-300 transform hover:-translate-y-0.5 shadow-lg hover:shadow-xl mt-4 md:mt-0">
            <i class="fas fa-arrow-left mr-2"></i> Volver a Membresías
        </a>
    </div>

    <!-- Scan Area -->
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-2 border-gray-200">
        <div class="flex items-center mb-6">
            <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                <i class="fas fa-qrcode text-white text-xl"></i>
            </div>
            <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                Escanear Código QR
            </h2>
        </div>
        <form id="scanForm">
            <div class="relative">
                <input type="text" id="qrInput"
                    class="w-full px-5 py-4 border-2 border-gray-300 rounded-xl text-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-400"
                    placeholder="Esperando escaneo de QR..." autocomplete="off" autofocus>
                <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                    <i class="fas fa-camera text-gray-400 text-xl"></i>
                </div>
            </div>
            <p class="text-sm text-gray-500 mt-3">Coloque el cursor en el campo y escanee el código con el lector. La validación se activará automáticamente.</p>
        </form>
    </div>

    <!-- History Area -->
    <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-gray-200">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
                <div class="bg-gradient-to-br from-green-500 to-emerald-600 p-3 rounded-xl mr-4 shadow-md">
                    <i class="fas fa-history text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Historial de Entradas
                </h2>
            </div>
            <input type="date" id="historyDate" name="historyDate" value="{{today}}"
                   class="px-4 py-2.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300">
        </div>

        <div class="overflow-x-auto rounded-2xl border-2 border-gray-200 shadow-sm">
            <table class="w-full border-collapse">
                <thead class="bg-gradient-to-r from-gray-100 to-gray-200">
                    <tr>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Hora de Entrada</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Nombre del Titular</th>
                        <th class="border-b-2 border-gray-300 px-6 py-4 text-left font-semibold text-gray-700">Área de Acceso</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="historyTableBody">
                    <!-- Las filas del historial se insertarán aquí dinámicamente -->
                </tbody>
            </table>
        </div>
        <div id="no-history" class="text-center py-8 text-gray-500" style="display: none;">No hay registros para la fecha seleccionada.</div>
    </div>
</div>

<!-- Scan Result Modal -->
<div id="scanResultModal" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 hidden p-4">
    <div id="modalContent" class="bg-white rounded-2xl shadow-2xl w-full max-w-lg transform transition-all duration-300 scale-95 opacity-0">
        <!-- Header con color dinámico -->
        <div id="modalHeader" class="p-5 border-b-2 transition-colors duration-300">
            <h3 id="modalTitle" class="text-2xl font-bold text-white flex items-center">
                <i id="modalIcon" class="fas mr-4"></i>
                <span id="modalTitleText"></span>
            </h3>
        </div>
        <!-- Body -->
        <div class="p-8 space-y-5">
            <div id="membershipDetails">
                <!-- Los detalles se llenarán dinámicamente -->
            </div>
            <div id="familyMembersSection" class="hidden">
                <h4 class="font-bold text-gray-700 mb-2">Integrantes:</h4>
                <ul id="familyMembersList" class="list-disc list-inside text-gray-600">
                    <!-- Los integrantes se listarán aquí -->
                </ul>
            </div>
        </div>
        <!-- Footer -->
        <div class="p-5 bg-gray-50 rounded-b-2xl flex justify-end">
            <button type="button" id="closeModalBtn"
                class="px-6 py-2.5 bg-gray-200 text-gray-800 font-semibold rounded-xl hover:bg-gray-300 transition-all duration-300">
                Cerrar
            </button>
        </div>
    </div>
</div>

<script src="/js/moduleMembershipJs/scanAccess.js"></script>
