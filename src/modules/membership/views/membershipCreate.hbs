{{>navbar}}
<div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden mt-20 border border-gray-200">
    <!-- Client Form Container -->
    <div id="client-form-container" class="p-8 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
        <div class="flex items-center mb-6">
            <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                <i class="fas fa-user-plus text-white text-xl"></i>
            </div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                Crear Cliente
            </h1>
        </div>

        <form id="form-cliente" action="/memberships/createClient" method="POST" class="space-y-6" novalidate>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label for="nombre_completo" class="block text-sm font-semibold text-gray-700">Nombre
                        completo</label>
                    <input type="text" id="nombre_completo" name="nombre_completo" required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 placeholder-gray-400">
                    <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
                </div>

                <div class="space-y-2">
                    <label for="telefono" class="block text-sm font-semibold text-gray-700">Teléfono</label>
                    <input type="text" id="telefono" name="telefono"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 placeholder-gray-400">
                    <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
                </div>
            </div>

            <div class="space-y-2">
                <label for="correo" class="block text-sm font-semibold text-gray-700">Correo electrónico</label>
                <input type="email" id="correo" name="correo" required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 placeholder-gray-400">
                <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
            </div>

            <button type="submit"
                class="w-full py-3 px-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                <i class="fas fa-user-check mr-2"></i>Registrar Cliente
            </button>

            <div id="cliente-message" class="hidden text-sm font-medium rounded-lg p-3 transition-all duration-300">
            </div>
        </form>
    </div>

    <!-- Membership Form Container -->
    <div id="membership-form-container" class="p-8 hidden bg-gradient-to-r from-slate-50 to-white">
        <div class="flex items-center mb-6">
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                <i class="fas fa-id-card text-white text-xl"></i>
            </div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                Crear Membresía
            </h1>
        </div>

        <form id="createMemberForm" action="/memberships/createMembership" method="POST" class="space-y-6" novalidate>
            <input type="hidden" id="id_cliente" name="id_cliente" value="">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label for="tipoMembresia" class="block text-sm font-semibold text-gray-700">Tipo de
                        membresía</label>
                    <select id="tipoMembresia" name="id_tipo_membresia" required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 appearance-none bg-white">
                        {{#each tiposMembresia}}
                        <option value="{{id_tipo_membresia}}" data-max="{{max_integrantes}}" data-precio="{{precio}}">
                            {{nombre}} - ${{precio}}
                        </option>
                        {{/each}}
                    </select>
                    <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
                </div>

                <div class="space-y-2">
                    <label for="metodo_pago" class="block text-sm font-semibold text-gray-700">Método de pago</label>
                    <select id="metodo_pago" name="metodo_pago" required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 appearance-none bg-white">
                        <option value="">Seleccione un método de pago</option>
                        {{#each tiposPago}}
                        <option value="{{id_metodo_pago}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                    <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label for="fecha_inicio" class="block text-sm font-semibold text-gray-700">Fecha de inicio</label>
                    <input type="date" id="fecha_inicio" name="fecha_inicio" required
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
                    <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
                </div>

                <div class="space-y-2">
                    <label for="fecha_fin" class="block text-sm font-semibold text-gray-700">Fecha de fin</label>
                    <input type="date" id="fecha_fin" name="fecha_fin" readonly
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm bg-gray-50 text-gray-700 font-medium">
                </div>
            </div>

            <input type="hidden" id="precio_final" name="precio_final" value="">

            <!-- Integrantes Section -->
            <div id="integrantesSection"
                class="hidden mt-6 p-6 border-2 border-gray-200 rounded-2xl bg-gradient-to-r from-gray-50 to-white shadow-sm">
                <h4 class="text-lg font-semibold text-gray-700 mb-4 flex items-center">
                    <i class="fas fa-users mr-2"></i>Integrantes familiares
                </h4>
                <div id="integrantesContainer" class="space-y-4"></div>
                <button type="button" id="addIntegranteBtn"
                    class="mt-4 inline-flex items-center px-4 py-2 border-2 border-gray-300 text-sm font-semibold rounded-xl text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="fas fa-plus-circle mr-2"></i>Agregar integrante
                </button>
            </div>

            <!-- Price and Discount Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                <div class="space-y-2">
                    <label for="precioFinal" class="block text-sm font-semibold text-gray-700">Precio final</label>
                    <input type="text" id="precioFinal" readonly
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm bg-gray-50 text-gray-700 font-bold text-lg">
                </div>

                {{#if isAdmin}}
                <div class="space-y-2">
                    <label for="descuento" class="block text-sm font-semibold text-gray-700">Descuento (%)</label>
                    <div class="flex space-x-3">
                        <input type="number" id="descuento" name="descuento" min="0" max="100" value="0"
                            class="flex-1 px-4 py-3 border-2 border-gray-200 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
                        <button type="button" id="aplicarDescuentoBtn"
                            class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            Aplicar
                        </button>
                    </div>
                    <p class="text-sm text-red-500 hidden error-message transform transition-all duration-300"></p>
                </div>
                {{/if}}
            </div>

            <button type="submit" id="submit-membership" disabled
                class="w-full py-3 px-4 bg-gray-400 text-white font-semibold rounded-xl shadow-lg cursor-not-allowed transition-all duration-300">
                <i class="fas fa-lock mr-2"></i>Crear Membresía (complete primero el cliente)
            </button>

            <div id="membership-message" class="hidden text-sm font-medium rounded-lg p-3 transition-all duration-300">
            </div>
        </form>
    </div>
</div>

<!-- Client Confirmation Modal -->
<div id="clienteModal"
    class="fixed inset-0 bg-black bg-opacity-50 max-h-[100vh] overflow-y-auto flex items-center justify-center hidden z-50 p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300 scale-95">
        <div class="p-6 border-b border-gray-100">
            <h3 class="text-xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-check-circle mr-2 text-blue-600"></i>Confirmar Datos del Cliente
            </h3>
        </div>
        <div id="clienteModalContent" class="p-6 space-y-3"></div>
        <div class="flex justify-end space-x-3 p-6 border-t border-gray-100">
            <button id="cancelClienteBtn"
                class="px-5 py-2 text-sm text-gray-600 hover:text-gray-800 font-medium rounded-lg hover:bg-gray-100 transition-colors duration-300">Cancelar</button>
            <button id="confirmClienteBtn"
                class="px-5 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                Confirmar
            </button>
        </div>
    </div>
</div>

<!-- Membership Confirmation Modal -->
<div id="membershipModal"
    class="fixed inset-0 bg-black bg-opacity-50 max-h-[80vh] overflow-y-auto flex items-center justify-center hidden z-50 p-4">
    <div
        class="bg-white rounded-2xl shadow-2xl w-full max-w-md max-h-[80vh] overflow-y-auto transform transition-all duration-300 scale-95">
        <div class="p-6 border-b border-gray-100">
            <h3 class="text-xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-check-circle mr-2 text-indigo-600"></i>Confirmar Membresía
            </h3>
        </div>
        <div id="membershipModalContent" class="p-6 space-y-3"></div>
        <div class="flex justify-end space-x-3 p-6 border-t border-gray-100">
            <button id="cancelMembershipBtn"
                class="px-5 py-2 text-sm text-gray-600 hover:text-gray-800 font-medium rounded-lg hover:bg-gray-100 transition-colors duration-300">Cancelar</button>
            <button id="confirmMembershipBtn"
                class="px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                Confirmar
            </button>
        </div>
    </div>
</div>

<!-- Success Modal Template -->
<template id="success-modal-template">
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div
            class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto transform transition-all duration-300">
            <div class="text-center p-8 border-b border-gray-100">
                <div
                    class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4 shadow-lg">
                    <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    ¡Membresía Creada Exitosamente!
                </h3>
            </div>

            <div class="border-2 border-gray-200 rounded-2xl p-6 m-6 bg-gradient-to-r from-gray-50 to-white">
                <h4 class="font-semibold text-gray-700 mb-4 flex items-center text-lg">
                    <i class="fas fa-info-circle mr-2"></i>Información de la Membresía
                </h4>
                <div class="space-y-3 text-sm" data-template-content="info"></div>
                <div class="mt-6" data-template-content="integrantes"></div>
            </div>

            <div class="border-2 border-gray-200 rounded-2xl p-6 m-6 bg-gradient-to-r from-gray-50 to-white">
                <h4 class="font-semibold text-gray-700 mb-4 text-center text-lg">
                    <i class="fas fa-qrcode mr-2"></i>Código QR de Acceso
                </h4>
                <div class="flex justify-center mb-4">
                    <img id="qrImage" src="" alt="QR de membresía"
                        class="w-56 h-56 border-2 border-gray-300 rounded-2xl object-contain bg-white shadow-lg">
                </div>
                <div id="qrError"
                    class="text-center text-yellow-600 mb-4 hidden p-3 bg-yellow-50 rounded-lg border border-yellow-200">
                    <i class="fas fa-exclamation-triangle mr-2"></i> El QR se está generando...
                </div>
                <div class="text-center" data-template-content="qr-download"></div>
            </div>

            <div class="bg-gradient-to-r from-gray-50 to-gray-100 border-2 border-gray-200 rounded-2xl p-4 m-6">
                <p class="text-sm text-gray-700 text-center font-medium">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    <strong>¡Importante!</strong> Se ha enviado un comprobante a su correo electrónico.
                    Presente este QR en recepción para acceder a las instalaciones.
                </p>
            </div>

            <div class="flex justify-center space-x-4 p-6">
                <button data-action="close"
                    class="px-8 py-3 border-2 border-gray-300 rounded-xl text-sm font-semibold text-gray-700 hover:bg-gray-50 hover:border-gray-400 transform hover:-translate-y-0.5 transition-all duration-300">
                    Cerrar
                </button>
                <button data-action="view-list"
                    class="px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300">
                    Ver Lista de Membresías
                </button>
            </div>
        </div>
    </div>
</template>

{{>footer}}

<script src="/js/moduleMembershipJs/validator.js" type="module"></script>
<script src="/js/moduleMembershipJs/createMembership.js" type="module"></script>