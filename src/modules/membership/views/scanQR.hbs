{{>navbar}}
<div class="w-full max-w-6xl mx-auto mt-20 px-4 pb-12">
    {{!-- Título y área de escaneo --}}
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 mb-8">
        <div class="text-center mb-8">
            <div
                class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-teal-500 to-cyan-600 rounded-2xl mb-4 shadow-lg transform hover:scale-105 transition-transform duration-300">
                <i class="fa-solid fa-qrcode text-white text-3xl"></i>
            </div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-3">Control de Acceso</h1>
            <p class="text-gray-600 text-lg max-w-2xl mx-auto leading-relaxed">Escanea el código QR para verificar el
                estado de la membresía y registrar el acceso al establecimiento.</p>
        </div>

        <form id="qr-scan-form" class="max-w-lg mx-auto">
            <div class="relative">
                <label for="qr-code-input" class="block text-sm font-semibold text-gray-700 mb-3 text-center">Coloca el
                    cursor en el campo y escanea el código QR:</label>
                <input type="text" id="qr-code-input" name="qr_code"
                    class="block w-full px-6 py-4 text-center text-lg text-gray-800 bg-white border-2 border-gray-200 rounded-xl shadow-sm focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300 hover:border-teal-300"
                    placeholder="Esperando escaneo..." autocomplete="off" autofocus>
                <div class="absolute inset-y-0 right-3 top-8 flex items-center">
                    <i class="fa-solid fa-laser-pointer text-teal-500 text-lg"></i>
                </div>
            </div>
        </form>
    </div>

    {{!-- Sección de Historial de Acceso --}}
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
        <div class="px-8 py-6 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Historial de Entradas</h2>
                    <p class="text-gray-600">Registro de accesos al establecimiento</p>
                </div>
                <div class="mt-4 md:mt-0">
                    <label for="history-date-picker" class="block text-sm font-semibold text-gray-700 mb-2">Filtrar por
                        fecha:</label>
                    <div class="relative">
                        <input type="date" id="history-date-picker" value="{{currentDate}}"
                            class="block w-full md:w-48 px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-300">
                        <div class="absolute inset-y-0 right-3 flex items-center">
                            <i class="fa-solid fa-calendar-day text-teal-500"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gradient-to-r from-teal-50 to-cyan-50">
                    <tr>
                        <th scope="col"
                            class="px-8 py-4 text-left text-xs font-semibold text-teal-800 uppercase tracking-wider">
                            Titular</th>
                        <th scope="col"
                            class="px-8 py-4 text-left text-xs font-semibold text-teal-800 uppercase tracking-wider">
                            Membresía</th>
                        <th scope="col"
                            class="px-8 py-4 text-left text-xs font-semibold text-teal-800 uppercase tracking-wider">
                            Fecha y Hora</th>
                        <th scope="col"
                            class="px-8 py-4 text-left text-xs font-semibold text-teal-800 uppercase tracking-wider">
                            Estado</th>
                    </tr>
                </thead>
                <tbody id="access-history-table-body" class="bg-white divide-y divide-gray-200">
                    {{#each accessLog}}
                    <tr class="hover:bg-gray-50 transition-colors duration-200">
                        <td class="px-8 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div
                                    class="flex-shrink-0 h-10 w-10 bg-gradient-to-r from-teal-100 to-cyan-100 rounded-full flex items-center justify-center">
                                    <i class="fa-solid fa-user text-teal-600"></i>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-semibold text-gray-900">{{this.titular}}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-8 py-4 whitespace-nowrap">
                            <span
                                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-teal-100 text-teal-800">
                                {{this.area_acceso}}
                            </span>
                        </td>
                        <td class="px-8 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                            {{formatDate this.fecha_hora_entrada}}
                        </td>
                        <td class="px-8 py-4 whitespace-nowrap">
                            <span
                                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <i class="fa-solid fa-check-circle mr-1"></i>
                                Acceso permitido
                            </span>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="4" class="px-8 py-12 text-center">
                            <div class="flex flex-col items-center justify-center text-gray-400">
                                <i class="fa-solid fa-inbox text-4xl mb-3"></i>
                                <p class="text-lg font-medium">No hay registros para la fecha seleccionada</p>
                                <p class="text-sm mt-1">Los accesos aparecerán aquí después del escaneo</p>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{!-- Footer de la tabla --}}
        <div class="px-8 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between text-sm text-gray-600">
                <div class="mb-2 md:mb-0">
                    Mostrando <span class="font-semibold text-gray-800">{{accessLog.length}}</span> registros
                </div>
                <div class="flex items-center space-x-4">
                    <button
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
                        <i class="fa-solid fa-chevron-left mr-2"></i>Anterior
                    </button>
                    <button
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
                        Siguiente<i class="fa-solid fa-chevron-right ml-2"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Modal para mostrar los resultados del escaneo --}}
<div id="qr-result-modal"
    class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center p-4 hidden z-50">
    <div id="modal-content"
        class="bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300">
        {{!-- El contenido del modal se inyectará dinámicamente con JavaScript --}}
    </div>
</div> 

{{!-- Se añade el script para la lógica de esta página --}}
<script src="/js/moduleMembershipJs/scan-qr.js" type="module"></script>